<div class="image fixed-top" style="z-index: -1;">
  <img class="w-100" src="https://images.unsplash.com/photo-1480074568708-e7b720bb3f09?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1053&q=80">
</div>

<div class="container">
  <div class="row">
    <div class="col-7">
    <div class="card">
      <h1><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>
    <div class="card">
      <h2>A bit more about this flat...</h2>
      <p><%= @flat.description %></p>
    </div>
    <div class="card">
      <%= link_to 'edit', edit_flat_path(@flat), { class: "btn btn-primary" } %>
      <%= link_to 'return', flats_path, { class: "btn btn-outline-secondary" } %>
    </div>
    </div>
    <div class="col-5">
    <div class="card">
      <h2>Details</h2>
      <span><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></span>
      <span><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></span>
    </div>
    <div class="card">
      <h2>Book this place!</h2>
      <form>
        <input type="text" class="form-control" placeholder="10/10/2019">
        <input type="text" class="form-control" placeholder="18/10/2019">
        <input type="submit" class="btn-success" value="Book">
      </form>
    </div>
    <div class="card">
      <span>Share</span>
      <span> <i class="fab fa-facebook-square"></i> <i class="fab fa-twitter-square"></i> <i class="fas fa-envelope"></i></span>
    </div>
    </div>
  </div>

</div>


