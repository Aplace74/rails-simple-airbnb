<h1>Add a Flat</h1>


<%= simple_form_for (@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.submit "Add a Flat", class: "btn btn-primary" %>
<% end %>

<%= link_to 'return', flats_path, { class: "btn btn-outline-secondary" } %>